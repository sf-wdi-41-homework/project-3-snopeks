@import "materialize/components/color";
$primary-color: color("indigo", "lighten-2") !default;
// $secondary-color: color("green", "base") !default;
@import "materialize";

@import "https://fonts.googleapis.com/icon?family=Material+Icons";
@import url(//fonts.googleapis.com/earlyaccess/notosansgurmukhi.css);

#main-nav{

  line-height: 56px;
  .brand-logo{
    left: 50%;
    transform: translateX(-50%);
  }
  .punjabi{

  }
  ul{
    float:right;
  }
  @media screen and (max-width: 650px){
    height: auto;
    .brand-logo{
      position: static;
      transform: translatex(0);
    }
    .punjabi{
      display: block;;
    }
    ul{
      float: none;
      li{
        float: none;
      }
    }
  }
}

#profile-header{
  background-color: #c5cae9;
  width: 100%;
  text-align: center;
  padding: 20px;
  h1{
    margin: 0;
  }
  a.btn{
    margin:10px;
  }
}
#reportcard {
  padding:10px;
  border: 2px dashed black;
  left: 50%;
}

.report-header{
  text-align: center;
  border: 2px solid black;
  padding: 5px;
}

#purchase-header{
  text-align: center;
}

#purchase-body{
  padding: 20px;
  margin-bottom: 0;
  background-color: #c5cae9;
}
#purchase-btn{
  text-align: center;
}

#welcome{
   background: url(<%= asset_path 'golden-temple.jpg' %>) no-repeat;
   background-size: cover;
   width: 100%;
   height: 450px;
   position: relative;
   &:before{
     content: '';
     display: block;
     position: absolute;
     top: 0;
     left: 0;
     width: 100%;
     height: 100%;
     background: rgba(0, 0, 0, 0.5);
   }
   .container{
     height: 450px;
     position: relative;
     z-index: 10;
     color: #fff;
     div{
       position: absolute;
       bottom: 40px;
       left: 40px;
       width: 50%;
       h3{
         text-transform: uppercase;
         font-size: 3em;
       }
       p{
         font-size: 1.5em;
       }
     }
   }
 }
.container{
  li {
    padding-right: 10px;
  }
   p{
     @extend .indigo-text, .darken-4;
     margin: 0px;
     font-size: 1.2em;
   }
}
#modules{
  p{
  text-align: center;
  height: 200px;

  }
  .beginner{
    border-radius:  50px;
    display:inline-block;
    background-color: #ff9800;

  }
  .intermediate{
    border-radius: 50px;
    background-color:#ffcc80;
  }
  .advanced{
    border-radius:50px;
    background-color:#7986cb;
  }
}
.btn{
  @extend .orange
}
 #plans{
   background-color: orange;
   p {
     @extend .indigo-text, .darken-3;
     font-size: 1.5em;
   }
   li{
     font-size: 1.2em;
   }
 }
.punjabi {
  font-family: "Noto Sans", "Noto Sans Gurmukhi", sans-serif;
  font-size: 2em;

}
.page-footer{
  h5{
    font-size: 1.2em;
  }
  p{
    font-size: 1em;
  }
  a{
    font-size: 1em;
  }

}
