@import "materialize/components/color";
$primary-color: color("indigo", "lighten-2") !default;
// $secondary-color: color("green", "base") !default;
@import "materialize";

@import "https://fonts.googleapis.com/icon?family=Material+Icons";
@import url(//fonts.googleapis.com/earlyaccess/notosansgurmukhi.css);

#main-nav{

  line-height: 56px;
  .brand-logo{
    left: 50%;
    transform: translateX(-50%);
  }
  .punjabi{

  }
  ul{
    float:right;
  }
  @media screen and (max-width: 650px){
    height: auto;
    .brand-logo{
      position: static;
      transform: translatex(0);
    }
    .punjabi{
      display: block;;
    }
    ul{
      float: none;
      li{
        float: none;
      }
    }
  }
}

#welcome{
   background: url(<%= asset_path 'golden-temple.jpg' %>) no-repeat;
   background-size: cover;
   width: 100%;
   height: 450px;
   position: relative;
   &:before{
     content: '';
     display: block;
     position: absolute;
     top: 0;
     left: 0;
     width: 100%;
     height: 100%;
     background: rgba(0, 0, 0, 0.5);
   }
   .container{
     height: 450px;
     position: relative;
     z-index: 10;
     color: #fff;
     div{
       position: absolute;
       bottom: 40px;
       left: 40px;
       width: 50%;
       h3{
         text-transform: uppercase;
         font-size: 3em;
       }
       p{
         font-size: 1.5em;
       }
     }
   }
 }
.container{
  padding: 10px;
  li {
    padding-right: 10px;
  }
   p{
     @extend .indigo-text, .darken-4;
     margin: 0px;
     font-size: 1.2em;
   }
}

.btn{
  @extend .orange
}
 #plans{
   background-color: orange;
   p {
     @extend .indigo-text, .darken-3;
     font-size: 1.5em;
   }
   li{
     font-size: 1.2em;
   }
 }
.punjabi {
  font-family: "Noto Sans", "Noto Sans Gurmukhi", sans-serif;
  font-size: 2em;

}
.page-footer{
  h5{
    font-size: 1.2em;
  }
  p{
    font-size: 1em;
  }
  a{
    font-size: 1em;
  }

}
