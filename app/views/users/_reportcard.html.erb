<div id="reportcard">
  <div class="row user-label">
    <div class="col s12">
      <h5 class="report-header">Report Card</h5>
      <p>Name: <%= current_user.first_name.upcase %> <%= current_user.last_name.upcase %></p>
      <p>Student since: <%= current_user.created_at.localtime %> </p>
      <p>Current date: <%= Date.today %> </p>
    </div>
  </div>
  <div class="row">
    <div class="col s12 m3">
      <h5 class="report-header">Grades</h5>
      <p>Total Course Completion:</p>
      <h5>43%</h5>
      <p>Average Quiz Score:</p>
      <h5>68%</h5>
    </div>
    <div class="col s12 m6">
      <h5 class="report-header">My Progress</h5>
      <div class="row">
        <div class="col s12 m6">
          <ul>
            <p>Completed:</p>
            <li>1 - Basic1</li>
            <li>2 - Food</li>
            <li>3 - Animals</li>
          </ul>
        </div>
        <div class="col s12 m6">
          <ul>
            <p>In Progress: </p>
            <li>4 - Questions</li>
            <li>5 - Transportation</li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col s12 m3">
      <h5 class="report-header">Skills</h5>
      <p>Vocabulary: 250 words</p>
      <p>Reading: </p>
      <p>Writing:</p>
    </div>
  </div>
</div>