<div class="container">
  <section id="modules-header">
      <div class="row">
        <div class="col s12">
          <h3>You have <%= @units.length %> units! </h3>
        </div>
      </div>
  </section>
  <section id="modules">
    <div class="row">
    <% @units.each do |unit| %>
      <div class=" col s4 m4">
        <div class="card">
          <div class="card-content">
            <span class="card-title"><%= unit.title%> </span>
            <p><%= unit.lessons.length %> lessons</p>
            <div class="card-action">
              <%= link_to "Lessons", show_unit_path(unit.id)%>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </section>
</div>

