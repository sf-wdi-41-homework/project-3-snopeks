<div class="container">
  <div class="row">
    <div class="col s2">
      <% @lessons.each do |lesson| %>
        <div class="card">
          <div class="card-content">
            <span class="card-title"><%= lesson.punjabi%> </span>
          </div>
          <div class="card-action">
            <%= link_to "practice", show_lesson_path(lesson.id) %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>