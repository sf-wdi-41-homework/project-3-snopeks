<div class="container">
  <div class="row">
      <% @lessons.each do |lesson| %>
        <div class="col xs12 s12 m4">
        <div class="card medium">
          <div class="card-content">
            <span class="card-title activator punjabi"><%= lesson.punjabi%><i class="material-icons right">more_vert</i></span>
          </div>
          <div class="card-reveal">
            <span class="card-title punjabi"><%= lesson.punjabi %> <i class="material-icons right">close</i></span>
            <label>English</label>
            <p><%= lesson.english%> </p>
            <label>Phonetics</label>
            <p><%= lesson.phonetic%> </p>
            <label>Example</label>
            <p class="punjabi"><%= lesson.example%> </p>
            <label>Translation</label>
            <p><%= lesson.translation%> </p>
          </div>
        </div>
      </div>
      <% end %>
  </div>
</div>
